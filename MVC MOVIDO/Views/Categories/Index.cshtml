@model IEnumerable<ProyectoMoya.Models.Categoria>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <h2>Categories</h2>
            <ul>
                @foreach (var item in Model)
            {
                    <li><h4>@item.Nombre</h4></li>
                }
            </ul>
        </div>
    </div>
</div>


@section showCategories{

    @foreach (var Categories in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title"><a href="#">@Categories.Nombre</a></h4>
            </div>
        </div>
    }

}

